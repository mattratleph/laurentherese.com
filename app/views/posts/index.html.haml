%section
  - @posts.each do |post|
    %section.left.image
      = link_to (image_tag post.image.url(:thumb)), post
      %p= post.title
      %p= post.link
      %p= post.description
      - if user_signed_in?
        %p
          = link_to 'Edit', edit_post_path(post)
          |
          = link_to 'Delete', post, :method => :delete, :data => { :confirm => 'Are you sure?' }

- if user_signed_in?
  %section.clear
    = link_to 'New Post', new_post_path
